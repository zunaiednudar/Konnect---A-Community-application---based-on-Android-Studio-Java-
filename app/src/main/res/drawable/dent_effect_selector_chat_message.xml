<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the item is pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/transparent_black" /> <!-- Dent color -->
            <corners android:radius="8dp" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="@color/card_background" /> <!-- Default color -->
            <corners android:radius="8dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
</selector>
