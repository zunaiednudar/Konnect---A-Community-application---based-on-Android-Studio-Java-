<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/card_background"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/item_message_sender_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_account_circle_black_24" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_message_sender_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:textColor="@color/transparent_black" />

            <TextView
                android:id="@+id/item_message_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme"
                android:layout_gravity="start"
                android:padding="10dp"
                android:textSize="18sp"
                android:background="@drawable/dent_effect_selector_chat_message"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_message_timestamp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/acme"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:textSize="15sp" />
</LinearLayout>